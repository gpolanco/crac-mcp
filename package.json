{
  "name": "crac-mcp",
  "version": "1.0.0",
  "description": "MCP server with tools, resources, and prompts - deployed on Railway",
  "main": "dist/server.js",
  "module": "./src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && chmod 755 dist/server.js && cp -r src/client dist/client",
    "start": "node dist/server.js",
    "test:types": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "railway"
  ],
  "author": "gpolanco",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "~0.21.0",
    "@modelcontextprotocol/sdk": "~1.20.0",
    "@supabase/supabase-js": "~2.47.10",
    "bcryptjs": "~3.0.3",
    "cors": "~2.8.5",
    "dotenv": "~17.2.3",
    "express": "~4.18.2",
    "zod": "~3.25.46"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "~2.8.17",
    "@types/express": "~4.17.21",
    "@types/node": "~20.0.0",
    "tsx": "~4.7.0",
    "typescript": "~5.3.0"
  }
}
